<script type="text/javascript">

  function selectAll() {
    if ($('#funded-select-all').is(":checked")) {
      $('#funded-table input').prop('checked', true);
    } else {
      $('#funded-table input').prop('checked', false);
    }
    if ($('#unfunded-select-all').is(":checked")) {
      $('#unfunded-table input').prop('checked', true);
    } else {
      $('#unfunded-table input').prop('checked', false);
    }
    if ($('#idea-select-all').is(":checked")) {
      $('#idea-table input').prop('checked', true);
    } else {
      $('#idea-table input').prop('checked', false);
    }
  }

  $('.select-all-box').change(function() {
    selectAll();
  });

  $(document).on('click', '.delete', function() {
    var id = $(this).attr('data-id');
    $('#delete-form').attr('action', '/projects/id/' + id + '?_method=DELETE');
    $('#delete-modal').modal()
  });

  $('#export').on('click', function() {
    var searchIDs = $('table input:checked').map(function(){
     return $(this).val();
    }).toArray();

    var queryString = searchIDs.join('&')

    $.ajax({
        method: "GET",
        url: "/projects/ids/" + queryString,
        dataType: "json",
        success: function(data) {
          var projectsString = JSON.stringify(data);
          $.post('http://ogre.adc4gis.com/convertJson', { json: projectsString, format : "csv"},
          function(csv){
            a = document.createElement('a');
            a.download="myFileName.csv";
            a.href='data:text/csv;charset=utf-8,'+escape(csv);
            document.body.appendChild(a);
            a.click()
          });
        }
    });

    //Uncheck all the selectors on export
    $('#funded-table input').prop('checked', false);
    $('#unfunded-table input').prop('checked', false);
    $('#idea-table input').prop('checked', false);
});
</script>
